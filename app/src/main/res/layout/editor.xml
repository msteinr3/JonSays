            app:layout_constraintEnd_toStartOf="@id/choose1"
            app:layout_constraintTop_toBottomOf="@+id/edit3"
            />

        <Button
            android:id="@+id/choose3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choose sound 3"
            app:layout_constraintStart_toEndOf="@+id/record1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit3"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/record3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/btn4txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Button 4 text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/record4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="record sound 4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/choose2"
            app:layout_constraintTop_toBottomOf="@+id/edit4"
            />

        <Button
            android:id="@+id/choose4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choose sound 4"
            app:layout_constraintStart_toEndOf="@+id/record2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit4"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
