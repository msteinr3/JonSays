        <Button
            android:id="@+id/record9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="record sound 9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/choose1"
            app:layout_constraintTop_toBottomOf="@+id/edit9"
            />

        <Button
            android:id="@+id/choose9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choose sound 9"
            app:layout_constraintStart_toEndOf="@+id/record1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit9"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit10"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/record9">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/btn10txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Button 10 text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/record10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="record sound 10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/choose2"
            app:layout_constraintTop_toBottomOf="@+id/edit10"
            />

        <Button
            android:id="@+id/choose10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choose sound 10"
            app:layout_constraintStart_toEndOf="@+id/record2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit10"
            />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/white"
        android:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record10"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>